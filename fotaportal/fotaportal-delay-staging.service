[Unit]
Description=FOTA Portal Delay(Staging)
After=network.target

[Service]
Type=simple
User=www-data
Group=www-data
WorkingDirectory=/home/fotaportal/fotaportal_staging
Environment=DJANGO_SETTINGS_MODULE=fotaportal.settings.staging
ExecStart=/home/fotaportal/.virtualenvs/fotaportal_staging/bin/python manage.py rundelay
Restart=always

[Install]
WantedBy=multi-user.target
